{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".", // Required for paths
    "paths": {
      "src/*": ["src/*"]
    },
    "incremental": true,
    "lib": ["es2017"]
  },
  "exclude": ["node_modules", "dist"]
}
