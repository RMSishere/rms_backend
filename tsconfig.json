{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {},
    "incremental": true,

    "allowJs": true,               // <-- IMPORTANT (allows JS polyfills)
    "esModuleInterop": true,       // <-- Helps with imports for firebase/undici
    "resolveJsonModule": true      // <-- Allows importing firebase JSON files
  },

  "include": [
    "src/**/*"                     // <-- Ensures JS polyfill file is included
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
